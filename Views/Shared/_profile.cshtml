<div class="frame frame-profile flex-column">

    <div class="profile-details">
        <div class="profile-picture">
            <img src="profile-picture.jpg" alt="Profile Picture">
        </div>
        <button class="follow-btn">Follow</button>
        <div class="profile-name">John Doe</div>
        <div class="profile-age">Age: 30</div>
        <div class="profile-location">Location: New York</div>
        <div class="profile-camera">Camera: Canon EOS R</div>
        <div class="profile-photography">Photography: Landscape</div>
        <button class="edit-btn">Editar</button>
    </div>

    <div class="edit-form">
        <div class="profile-picture">
            <img src="profile-picture.jpg" alt="Profile Picture">
        </div>
        <input type="file" id="profile-picture-input">
        <input type="text" class="name-input" placeholder="Nome">
        <input type="text" class="age-input" placeholder="Idade">
        <input type="text" class="location-input" placeholder="Localização">
        <input type="text" class="camera-input" placeholder="Camera">
        <input type="text" class="photography-input" placeholder="Photography">
        <button class="update-btn">Atualizar Perfil</button>
    </div>

</div>