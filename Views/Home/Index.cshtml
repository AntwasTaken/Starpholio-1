<!DOCTYPE html>
<html>
<head>
    <title>StarPholio</title>
    <style>
        body {
            background: linear-gradient(-45deg, cyan, magenta, yellow);
            background-attachment: fixed; /* Fixa o plano de fundo */
            color: black;
            font-family: "Helvetica", sans-serif;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        .container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            margin-top: 20px;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"],
        input[type="date"],
        input[type="submit"] {
            margin-bottom: 10px;
            padding: 15px;
            width: 100%;
            box-sizing: border-box;
            border: none;
            border-radius: 5px;
            font-family: "Helvetica", sans-serif;
            transition: transform 0.3s;
            font-size: 16px;
        }

            input[type="text"]:focus,
            input[type="password"]:focus,
            input[type="email"]:focus,
            input[type="date"]:focus,
            input[type="submit"]:focus {
                transform: scale(1.1);
            }

        input[type="submit"] {
            background-color: silver;
            color: black;
            cursor: pointer;
        }

        .frame {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
            border-radius: 10px;
        }

        .polaroid {
            width: 400px;
            height: 500px;
            position: relative;
            overflow: hidden;
            margin-bottom: 40px;
            background-color: white;
            border: 10px solid silver;
            border-radius: 10px;
        }

        .logo {
            position: absolute;
            bottom: 40px;
            left: 50%;
            transform: translateX(-50%);
        }

        .frames-container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .frame-register,
        .frame-login {
            width: 400px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            padding: 40px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="frames-container">
            <div class="frame-register">
                <h2>Register</h2>
                @Html.RenderPartial("_Register") <!-- Adicionado _Register.cshtml -->
            </div>

            <div class="frame">
                <div class="polaroid">
                    <h1>StarPholio</h1>
                    <div class="logo">
                        <img src="logo/starpholio1.png" alt="Logo">
                    </div>
                </div>
            </div>

            <div class="frame-login">
                <h2>Login</h2>
                @Html.RenderPartial("_Login") <!-- Adicionado _Login.cshtml -->
            </div>
        </div>
    </div>
    <script>
        // Handle form submission using AJAX
        document.getElementById("registerForm").addEventListener("submit", function (event) {
            event.preventDefault(); // Prevent the default form submission

            var form = event.target;
            var formData = new FormData(form);

            // Send the form data to the server using AJAX
            fetch(form.action, {
                method: "POST",
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                // Handle the server response
                console.log(data); // Do something with the response data
            })
            .catch(error => {
                console.error(error); // Handle any error that occurred
            });
        });
    </script>
</body>
</html>
