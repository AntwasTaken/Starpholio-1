<!DOCTYPE html>
<html>
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.js"></script>

    <style>
        /* Your existing styles here */

        body {
            background: linear-gradient(-45deg, cyan, magenta, yellow);
            color: black;
            font-family: "Helvetica", sans-serif;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        .container {
            display: flex;
            justify-content: space-between;
        }

        .frame {
            flex: 1;
            height: calc(100vh - 40px);
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            padding: 20px;
            box-sizing: border-box;
            overflow-y: auto;
            margin-right: 20px;
        }

        .frame-profile {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .profile-picture {
            width: 120px;
            height: 120px;
            border: 10px solid black;
            border-radius: 50%;
            background-color: black;
            overflow: hidden;
            margin-bottom: 20px;
        }

            .profile-picture img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .frame-polaroid {
            flex: 2;
            height: calc(100vh - 40px);
            background-color: rgba(255, 255, 255, 0.8);
            border: 10px solid silver;
            border-radius: 10px;
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
        }

        .frame-calendar {
            flex: 1;
            height: calc(100vh - 40px);
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            padding: 20px;
            box-sizing: border-box;
            overflow-y: auto;
        }

        .post {
            width: 700px;
            margin-bottom: 20px;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.6);
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .post-profile-picture {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            overflow: hidden;
            margin-bottom: 10px;
        }

            .post-profile-picture img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .post-username {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .post-content {
            text-align: center;
        }

        .post-icons {
            margin-top: 10px;
        }

        .like {
            cursor: pointer;
        }

            .like.clicked {
                color: red;
            }

        .logo {
            text-align: center;
            margin-top: 20px;
            font-size: 12px;
            opacity: 0.8;
        }

        .follow-btn {
            padding: 10px 20px;
            background-color: black;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .followers,
        .following {
            font-size: 14px;
            text-align: center;
            margin-top: 5px;
        }

        .update-btn {
            padding: 10px 20px;
            background-color: black;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="frame frame-profile">
            <div class="profile-picture">
                <img src="profile_picture.jpg" alt="Profile Picture">
            </div>
            <button class="follow-btn">Follow</button>
            <div class="follow-counts">
                <span class="followers">152 followers</span>
                <br>
                <span class="following">207 following</span>
            </div>
            <h2 class="profile-name">John Doe</h2>
            <p class="profile-age">Age: 25</p>
            <p class="profile-location">Location: New York</p>
            <p>Camera: Canon EOS R</p>
            <p>Photography: Landscape</p>
            <button class="update-btn">Update Profile</button>
            <div>
                <label for="name">Name:</label>
                <input type="text" class="name-input">
            </div>
            <div>
                <label for="age">Age:</label>
                <input type="text" class="age-input">
            </div>
            <div>
                <label for="location">Location:</label>
                <input type="text" class="location-input">
            </div>
        </div>
        <div class="frame frame-polaroid">
            <h1>Recent Posts</h1>
            <div class="post">
                <div class="post-profile-picture">
                    <img src="post_profile_picture1.jpg" alt="Post Profile Picture">
                </div>
                <div class="post-username">johndoe</div>
                <div class="post-content">
                    <p>Beautiful sunset at the beach</p>
                    <img src="post_image1.jpg" alt="Post Image" width="500">
                </div>
                <div class="post-icons">
                    <span class="like">&#x2764;</span>
                    <span class="comment">&#x1F4AC;</span>
                    <span class="share">&#x21A9;</span>
                </div>
            </div>
            <div class="post">
                <div class="post-profile-picture">
                    <img src="post_profile_picture2.jpg" alt="Post Profile Picture">
                </div>
                <div class="post-username">johndoe</div>
                <div class="post-content">
                    <p>Exploring the mountains</p>
                    <img src="post_image2.jpg" alt="Post Image" width="500">
                </div>
                <div class="post-icons">
                    <span class="like">&#x2764;</span>
                    <span class="comment">&#x1F4AC;</span>
                    <span class="share">&#x21A9;</span>
                </div>
            </div>
        </div>
        <div class="frame frame-calendar">
            <h1>Calendar</h1>
            <div id="calendar"></div>
            <h2>Upcoming Events:</h2>
            <ul id="upcoming-events"></ul>
        </div>
    </div>
    <div class="logo">
        Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.js"></script>
    <script>
        $(document).ready(function () {
            // Calendar
            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                defaultView: 'month',
                editable: true,
                eventLimit: true,
                events: [
                    {
                        title: 'Evento 1',
                        start: '2023-06-01',
                        end: '2023-06-03'
                    },
                    {
                        title: 'Evento 2',
                        start: '2023-06-07',
                        end: '2023-06-10'
                    },
                    {
                        title: 'Evento 3',
                        start: '2023-06-12',
                        end: '2023-06-15'
                    },
                    // ... add more events here ...
                ],
                eventRender: function (event, element) {
                    // Add a custom CSS class to the event element
                    element.addClass('calendar-event');
                }
            });

            // Upcoming Events
            var currentDate = moment().format('YYYY-MM-DD');
            var upcomingEvents = $('#calendar').fullCalendar('clientEvents', function (event) {
                return moment(event.start).isSameOrAfter(currentDate);
            });

            upcomingEvents.sort(function (a, b) {
                return moment(a.start).diff(moment(b.start));
            });

            var eventsList = '';
            for (var i = 0; i < upcomingEvents.length; i++) {
                eventsList += '<li>' + upcomingEvents[i].title + ': ' + moment(upcomingEvents[i].start).format('DD/MM/YYYY') + '</li>';
            }

            $('#upcoming-events').html(eventsList);

            // Like Button
            $('.like').on('click', function () {
                $(this).toggleClass('clicked');
            });

            // Update Profile Button
            $('.update-btn').on('click', function () {
                var nameInput = $('.name-input').val();
                var ageInput = $('.age-input').val();
                var locationInput = $('.location-input').val();

                $('.profile-name').text(nameInput);
                $('.profile-age').text('Age: ' + ageInput);
                $('.profile-location').text('Location: ' + locationInput);
            });
        });
    </script>
</body>
</html>
